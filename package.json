{
    "name": "@romaintaillandier1978/dotenv-never-lies",
    "version": "1.4.0",
    "description": "Typed, validated, and explicit environment variables â€” powered by Zod.",
    "license": "MIT",
    "author": "Romain TAILLANDIER",
    "type": "module",
    "repository": {
        "type": "git",
        "url": "https://github.com/romaintaillandier1978/dotenv-never-lies"
    },
    "scripts": {
        "desc": "tsx src/scripts/script-desc.ts",
        "build": "tsc",
        "pack": "rm -rf dist && yarn build && npm pack --pack-destination ./dist",
        "pack:check": "npm pack --dry-run",
        "release:patch": "npm version patch",
        "release:minor": "npm version minor",
        "release:major": "npm version major",
        "test": "vitest",
        "test:run": "vitest run",
        "test:watch": "vitest",
        "sample:infer": "yarn build && dnl infer --source src/sample/.env --out src/sample/env.dnl.ts -f ",
        "sample:assert": "yarn build && dnl --schema src/sample/env.dnl.ts  assert --source src/sample/.env ",
        "sample:init": "yarn build && dnl --schema src/sample/env.dnl.ts  init --out src/sample/.env.out -f ",
        "sample:main": "yarn build && tsx src/sample/main.ts",
        "gen:presets": "tsx src/infer/scripts/official-preset-registry.gen.ts"
    },
    "scripts-descriptions": {
        "desc": "Displays the list of available scripts with their short descriptions.",
        "build": "Compiles the project, creating the dist folder.",
        "pack": "Packs the project, creating the dotenv-never-lies-v*.tgz file.",
        "pack:check": "Verifies the project pack.",
        "release:patch": "Publishes a new patch version.",
        "release:minor": "Publishes a new minor version.",
        "release:major": "Publishes a new major version.",
        "test": "Runs tests.",
        "test:run": "Runs tests.",
        "test:watch": "Runs tests in watch mode.",
        "sample:infer": "Runs sample inference.",
        "sample:assert": "Runs sample assertion.",
        "sample:main": "Runs the sample main file.",
        "gen:presets": "Generates the official presets registry."
    },
    "keywords": [
        "env",
        "environment",
        "dotenv",
        "configuration",
        "zod",
        "validation",
        "typesafe",
        "cli"
    ],
    "engines": {
        "node": ">=20.19.0"
    },
    "files": [
        "dist",
        "README.md",
        "LICENSE"
    ],
    "main": "./dist/index.js",
    "types": "./dist/index.d.ts",
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "import": "./dist/index.js",
            "require": "./dist/index.js"
        },
        "./cli": {
            "import": "./dist/cli/index.js",
            "require": "./dist/cli/index.js"
        }
    },
    "bin": {
        "dnl": "./dist/cli/index.js"
    },
    "peerDependencies": {
        "zod": ">=4.2.1"
    },
    "dependencies": {
        "commander": "^14.0.2",
        "dotenv": "^17.2.3",
        "dotenv-expand": "^12.0.3",
        "esbuild": "^0.27.2",
        "tsx": "^4.21.0"
    },
    "devDependencies": {
        "@types/node": "^25.0.3",
        "@typescript-eslint/eslint-plugin": "^8.50.0",
        "@typescript-eslint/parser": "^8.50.0",
        "eslint": "^9.39.2",
        "prettier": "^3.7.4",
        "type-fest": "^5.4.1",
        "typescript": "^5.9.3",
        "typescript-eslint": "^8.53.1",
        "vitest": "^4.0.17",
        "zod": "^4.2.1"
    }
}
{
    "compilerOptions": {
        "target": "ES2020",

        "module": "NodeNext",
        "moduleResolution": "NodeNext",

        "outDir": "./dist",
        "rootDir": "./src",

        "declaration": true,
        "declarationMap": true,

        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "resolveJsonModule": true
    },
    "include": ["src/**/*"]
}
